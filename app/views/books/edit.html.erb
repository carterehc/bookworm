<% provide(:title, 'Edit Book') %>
<%= render 'layouts/home_nav'%>
<h2><%= "Edit Book: #{@book.title}" %> </h2>
<div class='row'>
        <%= form_for(@book) do | f| %>
            <td><p>
                <%= f.label :author_first %><br>
                <%= f.text_field :author_first, :value => @book.author_first %></p></td>
            <p><td>
                <%= f.label :author_last %><br>
                <%= f.text_field :author_last, :value => @book.author_last %></p></td>
            <td><p>
                <%= f.label :yr_published%><br>
                <%= f.text_field :yr_published, :value => @book.yr_published%></p></td>
            <td><p>
                <%= f.label :ISBN %><br>
                <%= f.text_field :ISBN, :value => @book.ISBN %></p></td>
            <td><p>  
                <%= check_box_tag(:read)%>
                <%= label_tag(:read, "Already read this book") %><br>
                  
                <%= check_box_tag(:want_read)%>
                <%= label_tag(:want_read, "I want to read this book")%><br>
      
                <%=check_box_tag(:own) %>
                <%= label_tag(:own, "I own this book")%><br>
      
                <%= check_box_tag(:want_own)%>
                <%= label_tag(:want_own, "I want to own this book")%><br>
            </p></td>

                <%= f.submit "Save Changes", class: 'btn btn-primary' %>
                <%= %>
        <% end %>
</div>