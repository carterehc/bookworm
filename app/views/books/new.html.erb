<% provide(:title, 'New Book') %>
<%= render 'layouts/home_nav'%>
<h1>New Book</h1>
<div class='row'>
        <%= form_for(@book) do | f| %>
            <td><p>
              <%= f.label :title %><br>
              <%= f.text_field :title %> <!--form.method-->
            </p></td>
            <td><p>
                <%= f.label :author_first %><br>
                <%= f.text_field :author_first%>
            </p></td>
            <p><td>
                <%= f.label :author_last %><br>
                <%= f.text_field :author_last %>
            </p></td>
            <td><p>
                <%= f.label(:yr_published)%>    
                <%= f.select :yr_published, (Time.zone.now.year - 400)..(Time.zone.now.year + 1) %>
            </p></td>
            <td><p>
                <%= f.label :ISBN %><br>
                <%= f.text_field :ISBN %>
            </p></td>
            <td><p>  
                <%= check_box_tag('book[read]')%>
                <%= label_tag('book[read]', "Have read this book")%><br>
                
                <%= label_tag(:yr_read, "Read in ")%>    
                <%= select_year(Date.today, :start_year => Time.now.year, :end_year => Time.now.year - 95, :field_name => :yr_read, ) %><br>
                <br>
                <%= label_tag('book[times_read]', "Times Read")%>
                <%= number_field_tag('book[times_read]')%><br>
                <br>

                <%= check_box_tag('book[want_read]')%>
                <%= label_tag(:want_read, "I want to read this book")%><br>
      
                <%=check_box_tag('book[own]') %>
                <%= label_tag(:own, "I own this book")%><br>
      
                <%= check_box_tag('book[want_own]')%>
                <%= label_tag(:want_own, "I want to own this book")%><br>
            </p></td>
            
            <td><p>
                <%= f.label :tag %><br>
                <%= f.text_field :tag %>
            </p></td>
            
    
