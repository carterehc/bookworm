<% provide(:title, ' | My Books') %>
<div class="table-responsive">
    <table id = "books" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th scope = "col">Title</th>
                <th scope = "col">Author</th>
                <th scope = "col">Published</th>
                <th scope = "col">Read</th>
                <th scope = "col">Year Read</th>
                <th scope = "col">Times Read</th>
                <th scope = "col">Own</th>
                <th scope="col">ISBN</th>
                <th scope = "col">Tag</th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book|%>
            <tr>
                <!--<th scope="row">-->
                    <td><%= book.title %></td>
                    <td><%= "#{book.author_first} #{book.author_last}" %></td>
                    <td><%= book.yr_published %></td>
                    <td><% if book.read? %>
                            <%= "Read" %>
                        <%else%>
                            <%= "Want to read" %>    <!--if book is not read, assumed want to read-->
                        <%end%>
                    </td>
                    <td><% if book.yr_read?%>
                            <%= book.yr_read%>
                        <%else%>
                            <%= "----" %>
                        <%end%>
                    </td>
                    <td><%if book.read?%>
                            <%if book.times_read?%>
                                <%= book.times_read%>
                            <%else%>
                                <%= "----" %>
                            <%end%>
                        <%end%>
                    </td>
                    <td><% if book.own? %>
                            <%= "Own" %>
                        <%else%>
                            <% if book.want_own?%>
                                <%= "Want to own" %>
                            <%else%>
                                <%= "Do not own"%>
                            <%end%>
                        <%end%>
                    </td>
                    <td><%=book.ISBN%></td>
                    <td><%= book.tag%></td>
                <!--</th>-->
            </tr>
            <% end%>
        </tbody>
    </table>
</div>